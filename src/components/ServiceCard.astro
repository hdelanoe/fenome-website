---
import Icon from './icon.astro';

// src/components/ServiceCard.astro
interface Props {
  title: string;
  icon?: 'lightbulb' | 'event' | 'video' | 'interactive' | 'sound'; // Types d'icônes prédéfinis (ou passer un SVG)
}

const { title, icon = 'lightbulb' } = Astro.props; 
---

<div class="flex flex-col items-center text-center p-6 border border-fenome-muted/30 rounded-lg h-full transition-colors hover:border-fenome-accent/50">
  <!-- Icône -->
  <div class="mb-4 text-fenome-accent">
   <Icon name={icon} class="w-12 h-12" />
  </div>
  <!-- Titre -->
  <h3 class="text-xl font-heading font-semibold text-fenome-head mb-2">{title}</h3>
  <!-- Description (via slot) -->
  <div class="text-fenome-main text-sm leading-relaxed">
    <slot />
  </div>
</div>