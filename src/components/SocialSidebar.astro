<!-- Main Container: Fixed position, flex layout -->
<div class="fixed left-0 top-0 h-screen z-40 px-3 py-6 hidden md:flex flex-col items-center justify-center space-y-8">
  {/* Social Links List: Reversed column */}
  <ul class="flex flex-col-reverse ml-3 space-y-4 space-y-reverse">
    {socialLinks.map((link, index) => (
      <li>
        <a
          href={link.href}
          target="_blank"
          rel="nofollow noopener noreferrer"
          class="group flex items-center text-fenome-muted hover:text-fenome-accent transition-colors duration-300"
          aria-label={link.name}
        >
          {/* Icon */}
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
            <path d={link.iconPath}></path>
          </svg>
          {/* Text Label (Appears on hover) */}
          <span class="ml-3 text-sm opacity-0 pointer-events-none group-hover:opacity-100 group-hover:pointer-events-auto transition-opacity duration-300 transform -translate-x-2 group-hover:translate-x-0">
          </span>
        </a>
      </li>
    ))}
  </ul>

  <div class="h-px w-8 bg-fenome-muted/30"></div>

  {/* Vertical Text */}
  <div class="vertical-text text-xs uppercase text-fenome-muted tracking-widest font-sans text-center">Suivez-nous
  </div>
</div>

<style>
  .vertical-text {
    writing-mode: vertical-rl; /* Écrit le texte verticalement */
    text-orientation: mixed; /* Garde les caractères droits */
     /* Ajuste l'espacement si nécessaire */
  }
</style>