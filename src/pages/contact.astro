---
// src/pages/contact.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionWrapper from '../components/SectionWrapper.astro'; // On peut réutiliser le wrapper
import SectionTitle from '../components/SectionTitle.astro'; // Pour le titre de section

// Informations spécifiques à la page Contact
const pageTitle = "Contactez-nous | Fénome";
const pageDescription = "Prêt à donner vie à vos idées ? Contactez Fénome pour discuter de votre prochain projet événementiel, scénographique ou interactif.";

// Icônes SVG (Heroicons Outline)
const phoneIconPath = "M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z";
const envelopeIconPath = "M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75";

// Remplace par tes vraies infos
const contactPhone = "+33 X XX XX XX XX";
const contactEmail = "contact@fenome.fr";
---

<BaseLayout title={pageTitle} description={pageDescription}>

  {/* Section Header - Style simple inspiré de l'original */}
  <header class="pt-24 pb-16 md:pt-32 md:pb-24 bg-gradient-to-b from-fenome-dark to-fenome-dark/90 text-center relative overflow-hidden">
    <div class="absolute inset-0 bg-black/30 z-0"></div> {/* Léger overlay */}
    <div class="container mx-auto px-6 md:px-10 relative z-10">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold text-fenome-head mb-4 animate-fade-in-up">
        Prêt à construire<br class="hidden md:block" /> vos visions ?
      </h1>
      <p class="text-lg text-fenome-main max-w-2xl mx-auto mb-8 animate-fade-in-up animation-delay-300">
        Discutons ensemble de la manière dont nous pouvons transformer vos idées en réalités immersives extraordinaires. Contactez-nous dès aujourd'hui.
      </p>
      {/* Optionnel : Bouton CTA si pertinent */}
      <!-- <a href="#contact-section" class="inline-block bg-fenome-accent text-fenome-dark font-bold py-3 px-6 rounded hover:opacity-90 transition-opacity">
        Nous Contacter
      </a> -->
    </div>
    {/* Optionnel : Indicateur de scroll */}
    <a href="#contact-section" aria-label="Descendre vers le contenu" class="absolute bottom-8 left-1/2 transform -translate-x-1/2 text-fenome-muted hover:text-fenome-accent transition-colors animate-bounce z-10">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
      </svg>
    </a>
  </header>

  {/* Section Contact Principale */}
  <section id="contact-section" class="py-16 md:py-24 bg-fenome-dark">
    <div class="container mx-auto px-6 md:px-10">
      <div class="flex flex-wrap md:flex-nowrap gap-8 lg:gap-12">

        {/* Colonne Gauche: Titre & Formulaire (Placeholder) */}
        <div class="w-full md:w-3/5 lg:w-2/3 order-2 md:order-1">
          <h1 class="text-3xl md:text-4xl font-heading font-semibold text-fenome-head mb-6">
            Envoyez-nous un message
          </h1>
        </div>

        {/* Colonne Droite: Informations de Contact */}
        <div class="w-full md:w-2/5 lg:w-1/3 order-1 md:order-2 bg-fenome-accent/10 p-6 md:p-8 rounded-lg">
           <h3 class="text-2xl font-heading font-semibold text-fenome-head mb-6">
             Nos Coordonnées
           </h3>
           <div class="space-y-6">
             {/* Téléphone */}
             <div class="flex items-start space-x-4">
               <div class="flex-shrink-0 mt-1 text-fenome-accent">
                 <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                   <path stroke-linecap="round" stroke-linejoin="round" d={phoneIconPath} />
                 </svg>
               </div>
               <div>
                 <h4 class="text-lg font-semibold text-fenome-head">Téléphone</h4>
                 <a href={`tel:${contactPhone.replace(/\s/g, '')}`} class="block text-fenome-main hover:text-fenome-accent transition-colors">{contactPhone}</a>
               </div>
             </div>

             {/* Email */}
             <div class="flex items-start space-x-4">
               <div class="flex-shrink-0 mt-1 text-fenome-accent">
                 <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                   <path stroke-linecap="round" stroke-linejoin="round" d={envelopeIconPath} />
                 </svg>
               </div>
               <div>
                 <h4 class="text-lg font-semibold text-fenome-head">Email</h4>
                 <a href={`mailto:${contactEmail}`} class="block text-fenome-main hover:text-fenome-accent transition-colors">{contactEmail}</a>
               </div>
             </div>

           </div>
        </div>

      </div>
    </div>
  </section>

</BaseLayout>

<style>
  /* Animations simples d'apparition (optionnel, comme sur Hero) */
    @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-in-up {
        animation: fadeInUp 0.8s ease-out forwards;
        opacity: 0; /* Start hidden */
    }
    .animation-delay-300 {
        animation-delay: 0.3s;
    }
</style>